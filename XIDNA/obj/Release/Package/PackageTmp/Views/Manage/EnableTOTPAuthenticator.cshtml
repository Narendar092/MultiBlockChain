@model XIDNA.Models.EnableTOTPAuthenticatorViewModel
@{
    ViewBag.Title = "EnableTOTPAuthenticator";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("EnableTOTPAuthenticator", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add TOTP</h4>
    <hr />
    <p>Scan QR, to enable TOTP Authentication from your TOTP enabled mobile app</p>
    @Html.ValidationSummary("", new { @class = "text-danger" })

<div class="alert-success">
    <img src="@Model.QRUrl" alt="TOTP Scan QR" />
</div>
<div class="alert-warning">
    <p>Manual EnterKey: @Model.ManualEnterKey</p>
</div>

    <div class="form-group">
        @Html.LabelFor(m => m.OTP, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.OTP, new { @class = "form-control" })
            @Html.TextBoxFor(m => m.ManualEnterKey, new {@style="display:none;" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}