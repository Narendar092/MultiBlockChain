@model XIDNA.Models.EnableTOTPAuthenticatorViewModel
@{
    ViewBag.Title = "Verify with OTP";
}

<h2>@ViewBag.Title.</h2>


@using (Html.BeginForm("LoginPageWith2FA", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*<h4>Verify with TOTP</h4>
    <hr />*@
    @Html.ValidationSummary("", new { @class = "text-danger" })

   
    <div class="form-group">
        @Html.LabelFor(m => m.OTP, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.OTP, new { @class = "form-control" })
            @Html.TextBoxFor(m => m.ManualEnterKey, new { @style = "display:none;" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}